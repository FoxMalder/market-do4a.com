                    each card in vandorCards
                        div.vendor-card(id=(card.letter || ''))
                            .vendor-card__wrapper
                                .vendor-card__img
                                    img(src=(card.img || 'https://marketdo4a.com/upload/resizer/02/65178_212x212_023fcd0f28a28b46db8a3881274ff6fe.png')
                                        alt=(card.name || 'Название картинки'))

                                .vendor-card__body
                                    a.vendor-card__title.stretched-link(href='#')
                                        | #{card.name || 'Название'}
                                    .vendor-card__description
                                        | #{card.description || 'Описание'}

                                .vendor-card__footer
                                    .vendor-card__row
                                        .vendor-card__stock-title
                                            | В магазинах
                                        .vendor-card__stock-value
                                            | #{card.stock || 'Нет товаров в наличии'}

