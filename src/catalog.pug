                                    // См. https://getbootstrap.com/docs/4.3/utilities/stretched-link/
                                    a.product-card__title(href='#') #{card.title || 'Заголовок'}

                                    .product-card__description #{card.description || 'Комплексный протеин'}

                                    .product-card__price-info
                                        // Не хотел пихать каждое слово в отдельный элемент, потому на псевдоэлементах
                                        // Если потребуется, переделаю
                                        .product-card__price(data-price-text='от', data-price-unit='₽') #{card.price || '1 750'}
