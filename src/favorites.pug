    .catalog
        .catalog__container
            .catalog__list
                -
                    const productCards = [
                    {
                    title: 'Optimum nutrition gold standart whey',
                    description: 'Комплексный протеин',
                    price: '1 750',
                    sale: '600',
                    }, {
                    title: 'Optimum nutrition gold standart whey',
                    price: '1 750',
                    sale: '600',
                    }, {
                    title: 'Optimum nutrition',
                    price: '1 750',
                    sale: '600',
                    stickers: ['yellow', 'green', 'red', 'delivery']
                    }, {
                    title: 'Optimum nutrition gold standart whey protein',
                    price: '1 750',
                    sale: '600',
                    }, {
                    price: '1 750',
                    sale: '600',
                    }, {
                    price: '1 750',
                    sale: '600',
                    }, {
                    price: '1 750',
                    sale: '600',
                    }, {
                    price: '1 750',
                    sale: '600',
                    },
                    ]
                each card in productCards
                    .catalog__item

                        // Карточка товара
                        // По высоте и ширине заполняет родительский элемент
                        .product-card
                            .product-card__wrapper
                                .product-card__img
                                    img(src=require('./img/catalog/product-1.png'))

                                // Ссылка. Делает кликабельным весь .product-card__wrapper
                                // Причина: отсутствие необходимости использовать <div> внутри <a>
                                // См. https://getbootstrap.com/docs/4.3/utilities/stretched-link/
                                a.product-card__title(href='#') #{card.title || 'Заголовок'}

                                .product-card__description #{card.description || 'Комплексный протеин'}

                                .product-card__price-info
                                    // Не хотел пихать каждое слово в отдельный элемент, потому на псевдоэлементах
                                    // Если потребуется, переделаю
                                    .product-card__price(data-price-text='от', data-price-unit='₽') #{card.price || '1 750'}
                                    .product-card__sale(data-sale-text='скидка до', data-sale-unit='₽') #{card.sale || '300'}

                                .product-card__row
                                    .product-card__reviews
                                        .product-rating
                                            .product-rating__item.product-rating__item_100
                                            .product-rating__item.product-rating__item_100
                                            .product-rating__item.product-rating__item_100
                                            .product-rating__item.product-rating__item_50
                                            .product-rating__item
                                        .product-card__reviews-title
                                            | 31 отзыв
                                    .product-card__stock
                                        // Модификаторы:
                                        //    .green    - (глобальный класс) Зеленый текст
                                        //    .red      - (глобальный класс) Красный текст
                                        .product-card__stock-title.green В наличии
                                        .product-card__stock-value 6 фасовок

                                .product-card__stickers
                                    // Модификаторы:
                                    //    .product-card__sticker_yellow     - Желтый фон
                                    //    .product-card__sticker_green      - Зеленый фон
                                    //    .product-card__sticker_red        - Красный фон
                                    //    .product-card__sticker_center     - Размещает по центру
                                    if card.stickers
                                        each sticker in card.stickers
                                            if sticker === 'yellow'
                                                .product-card__sticker.product-card__sticker_yellow
                                                    | Рекомендуем
                                            else if sticker === 'green'
                                                .product-card__sticker.product-card__sticker_green
                                                    | Новинка
                                            else if sticker === 'red'
                                                .product-card__sticker.product-card__sticker_red
                                                    | Хит!
                                            else if sticker === 'delivery'
                                                .product-card__sticker.product-card__sticker_red.product-card__sticker_center
                                                    | Доставка 1 день

                            .product-card__controls
                                button.product-card__button.btn.btn-red Подробнее
                                button.product-card__button.btn.btn-gray-2 К сравнению

                            // Возможные элементы:
                            //     <button>
                            //     <a>
                            // Модификаторы:
                            //     .active или .product-card__favorites_active - Добавлено в избранное
                            button.product-card__favorites.active.hover
                                +sprite('product-card-heart.svg')
