    .catalog
        .catalog__container
            .card-list
                -
                    let index = Math.round(Math.random() * 1000);
                    const productCards = [
                    {
                    title: 'Optimum nutrition gold standart whey',
                    description: 'Комплексный протеин',
                    stickers: ['delivery', 'yellow', 'green', 'red']
                    }, {
                    title: 'Optimum nutrition gold standart whey',
                    }, {
                    title: 'Optimum nutrition',
                    stickers: ['yellow', 'green', 'red'],
                    disabled: true,
                    }, {
                    title: 'Optimum nutrition gold standart whey protein',
                    stickers: ['delivery', 'yellow']
                    }, {
                    price: '1 750',
                    sale: '600',
                    stickers: ['', 'yellow', 'green', '']
                    }, {
                    price: '1 750',
                    sale: '600'
                    }, {
                    price: '1 750',
                    sale: '600',
                    stickers: ['delivery', '', '', '']
                    }, {
                    price: '1 750',
                    sale: '600'
                    }
                    ]
                each card in productCards
                    div(class=`product-card ${card.disabled ? 'disabled' : ''}`, data-product-id=index++)
                        .product-card__wrapper(itemscope itemtype="http://schema.org/Product")
                            .product-card__img
                                img(itemprop="image"
                                    src="https://msk.marketdo4a.com/upload/resizer/63/99069_135x135_63ec585121253185df07d1ad9e4365dd.jpg"
                                    srcset="https://msk.marketdo4a.com/upload/resizer/15/99069_270x270_151b675ade5086be6aabcf932706bc81.jpg 2x"
                                    alt="Название товара")

                            .product-card__body
                                // Ссылку назначаем на заголовок
                                // Если хотим, чтобы вся карточка была кликабельной, а не только заголовок
                                // то добавляем класс .stretched-link
                                // См. https://getbootstrap.com/docs/4.3/utilities/stretched-link/
                                // Причина: соответствие стандартам, которые запрещают <div> внутри <a>
                                a.product-card__title.stretched-link(href='#' itemprop="name")
                                    | #{card.title || 'Заголовок'}
                                .product-card__description(itemprop="description")
                                    | #{card.description || 'Описание'}

                            .product-card__footer(itemprop="offers" itemscope itemtype="http://schema.org/Offer")
                                .product-card__price
                                    span.small от
                                    span.price(itemprop="price" content="1750.00")  1 750
                                    span.currency(itemprop="priceCurrency" content="RUB")  ₽
                                .product-card__sale
                                    | Экономия до 300 ₽

                                .product-card__row
                                    .product-card__reviews(itemprop="aggregateRating" itemscope itemtype="http://schema.org/AggregateRating")
                                        meta(itemprop="ratingValue" content="4.23")
                                        meta(itemprop="bestRating" content="5")
                                        meta(itemprop="reviewCount" content="31")
                                        span.product-card__rating
                                            i.i.i-star.red
                                            i.i.i-star.red
                                            i.i.i-star.red
                                            i.i.i-star.red
                                            i.i.i-star
                                        span 31 отзыв
                                    .product-card__stock
                                        // Добавляем элемент, если товар в наличии
                                        link(itemprop="availability" href="http://schema.org/InStock")
                                        // Модификаторы:
                                        //    .green    - (глобальный класс) Зеленый текст
                                        //    .red      - (глобальный класс) Красный текст
                                        div.green В наличии
                                        div 6 фасовок
                        if card.stickers
                            .product-stickers
                                // Модификаторы:
                                //    .product-stickers_item_yellow     - Желтый фон
                                //    .product-stickers_item_green      - Зеленый фон
                                //    .product-stickers_item_red        - Красный фон
                                //    .product-stickers_item_delivery   - Иконка доставки
                                each sticker in card.stickers
                                    if sticker === 'delivery'
                                        .product-stickers__item.product-stickers__item_red.product-stickers__item_delivery
                                            | Доставка <br>1 день
                                    else if sticker === 'yellow'
                                        .product-stickers__item.product-stickers__item_yellow
                                            | Рекомендуем
                                    else if sticker === 'green'
                                        .product-stickers__item.product-stickers__item_green
                                            | Новинка
                                    else if sticker === 'red'
                                        .product-stickers__item.product-stickers__item_red
                                            | Хит!

                        // Возможные элементы:
                        //     <button>
                        //     <a>
                        // Модификаторы:
                        //     .active или .product-card__favorites_active - Добавлено в избранное
                        .product-control
                            button.product-control__favorites.active(data-product-toggle='remove-favorites')
                                +sprite('product-card-heart.svg')
