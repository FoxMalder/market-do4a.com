{
    "parser": "vue-eslint-parser",
    "env": {
        "browser": true,
        "es6": true,
        "jquery": true
    },
    "extends": [
        "plugin:vue/recommended",
        "eslint:recommended",
        "airbnb-base"
    ],
    "parserOptions": {
        "parser": "babel-eslint",
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "import/no-unresolved": 0
    }
}
